<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#868c3e" />
         <gradient android:angle="-90" android:startColor="#c4ce5a" android:endColor="#e2ed6a"  />
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#dfea68" />
         <solid android:color="#f2fe71"/>
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#eaf47d" />
         <gradient android:angle="-90" android:startColor="#f1fc81" android:endColor="#dee964" />
     </shape>
 </item>
</selector>